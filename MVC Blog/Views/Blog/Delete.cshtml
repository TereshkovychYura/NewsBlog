@{
    ViewData["Title"] = "Post";
}
<form asp-controller="Blog" asp-action="Delete" method="post" class="mt-3">
    <div class="container post-block">
        <article>
            <h2 class="text-center">Delete</h2>
            @if (Model.img == null)
            {
                <img class="blog-image" src="~/img/default_image.jpg" />
            }
            else
            {
                <img class="post-image" src="~/img/@Model.img" />
            }
            <p>@Model.fulltext</p>
            <footer>
                Author - @Model.author
            </footer>
        </article>
    </div>


    <div class="form-group row">
        <button type="submit" class="btn btn-info">Confirm delete</button>
        <a asp-controller="Blog" asp-action="Blog" class="btn btn-info">Cancel</a>
    </div>
</form>
